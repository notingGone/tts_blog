<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="mini-header pull-right">
        <% if user_signed_in? %>
          Welcome, <%= current_user.email %>!
          <% if current_user.avatar.url.nil? %>
            <%= image_tag 'default-avatar.jpg', class: "avatar-mini" %>
          <% else %>
            <%= image_tag current_user.avatar.url, class: "avatar-mini" %>
          <% end %>
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>

    <%= yield %>

  </body>
</html>
